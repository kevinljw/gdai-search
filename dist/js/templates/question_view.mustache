<div class="card" style="margin-top: 2.5rem">
    <div class="card-header">
        <h3 class="card-title">Preview</h3>
        <div class="card-tools">
          <a href="question.html?q={{id}}&m={{m}}" target="_new">View All</a>
          <button type="button" class="btn btn-tool remove-btn" data-card-widget="remove">
            <i class="fas fa-times"></i>
          </button>
        </div>
        
    </div>
    <div class="card-body" style="height: 700px; padding: 1rem 1rem;">
        <p><strong>{{question}}</strong></p>
        <p id="question-view-pure">{{{pureText}}}</p>
    </div>
</div>

